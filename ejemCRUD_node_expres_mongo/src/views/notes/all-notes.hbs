<div class="row">
    {{#each notes}}
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{!-- se pueden acceder ala propiedades de los obtejos de la db --}}
                    {{ title }} <a href="/notes/edit/{{id}}"><i class="far fa-edit"></i></a>
                </h4>
                <p>{{ description }} </p>

                <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value='DELTE'>
                    <button class="btn btn-danger block btm-sm" type="submit">
                        Delete
                    </button>
                </form>

            </div>

        </div>
    </div>
    {{else}}
    <div class="card mx-auto">
        <div class="card-body">
            <h1>Hello {{user.name}}</h1>
            <p class="lead">There are not notes yet</p>
            <a href="/notes/add" class="btn btn-success btn-block">Create One!</a>
        </div>

    </div>

    {{/each}}
</div>